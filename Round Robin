#include <stdio.h>

struct Process { int id, bt, rt, wt, tat, ct; };

int main(){
    int n,tq,i,time=0,done; printf("Enter n: "); scanf("%d",&n);
    struct Process p[n];
    for(i=0;i<n;i++){ p[i].id=i+1; printf("BT for P%d: ",i+1); scanf("%d",&p[i].bt); p[i].rt=p[i].bt; }
    printf("Enter Time Quantum: "); scanf("%d",&tq);

    do{
        done=1;
        for(i=0;i<n;i++){
            if(p[i].rt>0){ done=0;
                if(p[i].rt>tq){ time+=tq; p[i].rt-=tq; }
                else{ time+=p[i].rt; p[i].rt=0; p[i].ct=time; p[i].tat=p[i].ct; p[i].wt=p[i].tat-p[i].bt; }
            }
        }
    }while(!done);

    printf("\nP\tBT\tCT\tTAT\tWT\n");
    for(i=0;i<n;i++) printf("P%d\t%d\t%d\t%d\t%d\n",p[i].id,p[i].bt,p[i].ct,p[i].tat,p[i].wt);
}
